<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.kanban.sticky.state
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="companies" position="after">
                <h2>Kanban Sticky State</h2>
                <div class="row mt16 o_settings_container"
                     id="website_shop_address">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="kanban_sticky_state" string="Kanban Sticky State"/>
                            <field name="kanban_sticky_state"
                                   widget="boolean_toggle"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
