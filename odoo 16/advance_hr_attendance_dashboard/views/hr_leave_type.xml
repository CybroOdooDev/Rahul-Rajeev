<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_leave_type_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='leave_validation_type']" position="after">
                <field name="leave_code"/>
                <field name="leave_code_color" widget="color_picker"/>
            </xpath>
        </field>
    </record>
</odoo>